<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_style"
            android:layout_margin="10dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="@dimen/form_nama"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="@string/username"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Email"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Phone Number"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"></EditText>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fd"
                android:text="Male"
                android:drawableLeft="@drawable/ic_register_radio_on"
                android:drawablePadding="@dimen/small_small"
                />
            <RadioButton android:id="@+id/radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:textColor="@color/fd"
                android:text="Female"
                android:drawableLeft="@drawable/ic_register_radio_off"
                android:drawablePadding="@dimen/small_small"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="150dp"
                android:layout_height="@dimen/form_height"
                android:layout_marginVertical="@dimen/padding_layout"
                android:background="@drawable/edit_text_form_style"
                android:hint="Blood Type"
                android:textColor="@color/fd"
                android:textColorHint="@color/fd"
                android:textSize="@dimen/button"
                android:drawableRight="@drawable/ic_arrow_dropdown"
                android:padding="2dp"></EditText>

            <EditText
                android:layout_width="150dp"
                android:layout_height="@dimen/form_height"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="@dimen/padding_layout"
                android:background="@drawable/edit_text_form_style"
                android:hint="Reshus"
                android:textColor="@color/fd"
                android:textColorHint="@color/fd"
                android:textSize="@dimen/button"
                android:drawableRight="@drawable/ic_arrow_dropdown"
                android:padding="2dp"></EditText>
        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Password"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Retype Password"
            android:padding="2dp"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"></EditText>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:onClick="onRadioButtonClicked"
                android:drawableLeft="@drawable/ic_register_radio_on"
                android:drawablePadding="@dimen/small_small"
                android:textColor="@color/fd"
                />
            <RadioButton android:id="@+id/organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Organization"
                android:onClick="onRadioButtonClicked"
                android:drawableLeft="@drawable/ic_register_radio_off"
                android:drawablePadding="@dimen/small_small"
                android:textColor="@color/fd"/>
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Job"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"
            android:drawableRight="@drawable/ic_arrow_dropdown"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Home Address"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@drawable/edit_text_form_style"
            android:hint="Default Location"
            android:textColor="@color/fd"
            android:textColorHint="@color/fd"
            android:textSize="@dimen/button"
            android:padding="2dp"
            android:drawableRight="@drawable/ic_blood_needed_location"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_height"
            android:layout_marginVertical="@dimen/padding_layout"
            android:background="@color/white"
            android:text="Agree with Term and Conditions"
            android:textColor="@color/fd"
            android:textSize="@dimen/small_small"
            android:gravity="center|left"
            android:padding="2dp"
            android:drawablePadding="20dp"
            android:paddingTop="20dp"
            android:drawableLeft="@drawable/centang_style"></TextView>

        <android.widget.Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_2_style"
            android:layout_marginVertical="@dimen/padding_layout"
            android:text="REGISTER"
            android:textColor="@color/bluebg"
            android:textSize="@dimen/button"
            android:onClick="kedua">

        </android.widget.Button>


    </LinearLayout>

</LinearLayout>