<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/ic_header_profile">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/burger_style"
                android:layout_margin="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/notif_style"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true">

            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Hartaji"
                android:textColor="@color/lb"
                android:layout_above="@+id/nama"
                android:layout_centerInParent="true"
                android:textSize="@dimen/button"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Hartaji"
                android:textColor="@color/bluebg"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">
            </TextView>



        </RelativeLayout>

    </LinearLayout>


</LinearLayout>